        <attr name="hasEmptyView" />
    </declare-styleable>

    <declare-styleable name="XListView">
        <attr name="headerLineVisibility" />
        <attr name="footerLineVisibility" />
        <attr name="hasEmptyView" />
    </declare-styleable>

</resources>
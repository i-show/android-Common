    <!-- 发送验证码的Button -->
    <declare-styleable name="VerifyCodeButton">
        <attr name="android:padding" />
        <attr name="textSize" />
        <attr name="textColor" />
    </declare-styleable>

    <declare-styleable name="SwitchButton">
        <attr name="thumbDrawable" />
        <attr name="thumbColor" />

        <attr name="thumbMargin" />
        <attr name="thumbMarginTop" />
        <attr name="thumbMarginBottom" />

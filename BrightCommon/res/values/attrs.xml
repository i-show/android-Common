<resources>

    <attr name="dialogTitleStyle" format="reference" />
    <attr name="dialogMessageStyle" format="reference" />
    <attr name="dialogButtonStyle" format="reference" />

    <attr name="dialogLayouts" format="reference" />
    <attr name="dialogMainLayout" format="reference" />
    <attr name="dialogListLayout" format="reference" />
    <attr name="dialogMultiChoiceItem" format="reference" />
    <attr name="dialogSingleChoiceItem" format="reference" />
    <attr name="dialogListItem" format="reference" />

    <attr name="dialogButtonBackgrounds" format="reference" />
    <attr name="middleBackground" format="reference|color" />
    <attr name="wholeBackground" format="reference|color" />
    <!-- TopBar的样式 -->
    <attr name="topbarStyle" format="reference" />
    <attr name="actionMinWidth" format="dimension" />

    <attr name="loadingText" format="string" />
    <attr name="errorText" format="string" />
    <attr name="errorImage" format="reference" />


    <attr name="tip" format="string" />
    <!-- 强制提醒 -->
    <attr name="tipStrengthen" format="boolean" />
    <!-- 提醒的宽度 -->
    <attr name="tipWidth" format="dimension" />
    <!-- 提醒的宽度 -->
    <attr name="rightTip" format="string" />

    <!-- 是否可以点击 -->
    <attr name="clickable" format="boolean" />
    <!-- 是否开启密码格式 -->
    <attr name="secretable" format="boolean" />

    <attr name="hint" format="string" />

    <attr name="text" format="string" />
    <attr name="textSize" format="dimension" />
    <attr name="textColor" format="color" />
    <attr name="textAppearance" format="reference" />

    <attr name="subText" format="string" />
    <attr name="subTextSize" format="dimension" />
    <attr name="subTextColor" format="color" />

    <attr name="leftText" format="string" />
    <attr name="leftTextSize" format="reference" />
    <attr name="leftTextColor" format="reference" />
    <attr name="leftImage" format="reference" />
    <attr name="leftBackground" format="reference|color" />

    <attr name="rightText" format="string" />
    <attr name="rightTextSize" format="reference" />
    <attr name="rightTextColor" format="reference" />
    <attr name="rightImage" format="reference" />
    <attr name="rightBackground" format="reference|color" />

    <attr name="tint" format="color" />
    <attr name="tintAlpha" format="color" />
    <attr name="tintColor" format="color|reference" />

    <attr name="image" format="reference|color" />

    <attr name="padding" format="dimension" />

    <attr name="rightPadding" format="dimension" />
    <attr name="leftPadding" format="dimension" />

    <attr name="selectedChild" format="reference" />

    <attr name="thumbDrawable" format="reference" />
    <attr name="thumbColor" format="color|reference" />
    <attr name="thumbMargin" format="dimension|reference" />
    <attr name="thumbMarginTop" format="dimension|reference" />
    <attr name="thumbMarginBottom" format="dimension|reference" />
    <attr name="thumbMarginLeft" format="dimension|reference" />
    <attr name="thumbMarginRight" format="dimension|reference" />
    <attr name="thumbWidth" format="dimension|reference" />
    <attr name="thumbHeight" format="dimension|reference" />
    <attr name="thumbRadius" format="dimension|reference" />

    <attr name="backgroundRadius" format="dimension|reference" />
    <attr name="backgroundDrawable" format="reference" />
    <attr name="backgroundColor" format="color|reference" />
    <attr name="backgroundMeasureRatio" format="float" />

    <attr name="fadeBack" format="boolean" />
    <attr name="animationDuration" format="integer" />

    <attr name="positon">
        <enum name="left" value="1" />
        <enum name="right" value="2" />
        <enum name="top" value="3" />
        <enum name="bottom" value="4" />
    </attr>

    <attr name="leftVisibility">
        <enum name="visible" value="0" />
        <enum name="invisible" value="4" />
        <enum name="gone" value="8" />
    </attr>

    <attr name="rightVisibility">
        <enum name="visible" value="0" />
        <enum name="invisible" value="4" />
        <enum name="gone" value="8" />
    </attr>

    <attr name="shape">
        <enum name="rect" value="0" />
        <enum name="circle" value="4" />
    </attr>

    <attr name="stripHeight" format="dimension" />
    <attr name="stripColor" format="color" />
    <attr name="stripPaddingRatio" format="float" />
    <attr name="lineColor" format="color" />
    <attr name="linePaddingRatio" format="float" />
    <attr name="headerLineVisibility">
        <enum name="visible" value="0" />
        <enum name="invisible" value="4" />
        <enum name="gone" value="8" />
    </attr>

    <attr name="footerLineVisibility">
        <enum name="visible" value="0" />
        <enum name="invisible" value="4" />
        <enum name="gone" value="8" />
    </attr>

    <attr name="hasEmptyView" format="boolean" />

    <attr name="inputRightImage" format="reference" />
    <attr name="inputBackground" format="reference" />

    <attr name="inputGravity">
        <!-- Push object to the top of its container, not changing its size. -->
        <flag name="top" value="0x30" />
        <!-- Push object to the bottom of its container, not changing its size. -->
        <flag name="bottom" value="0x50" />
        <!-- Push object to the left of its container, not changing its size. -->
        <flag name="left" value="0x03" />
        <!-- Push object to the right of its container, not changing its size. -->
        <flag name="right" value="0x05" />
        <!-- Place object in the vertical center of its container, not changing its size. -->
        <flag name="center_vertical" value="0x10" />
        <!-- Place object in the horizontal center of its container, not changing its size. -->
        <flag name="center_horizontal" value="0x01" />
        <!-- Place the object in the center of its container in both the vertical and horizontal axis, not changing its size. -->
        <flag name="center" value="0x11" />
    </attr>

    <attr name="photomode">
        <enum name="compress" value="0" />
        <enum name="crop" value="1" />
    </attr>

    <attr name="cropMode">
        <enum name="ratio_fit_image" value="0" />
        <enum name="ratio_4_3" value="1" />
        <enum name="ratio_3_4" value="2" />
        <enum name="ratio_1_1" value="3" />
        <enum name="ratio_16_9" value="4" />
        <enum name="ratio_9_16" value="5" />
        <enum name="ratio_free" value="6" />
        <enum name="ratio_custom" value="7" />
        <enum name="circle" value="8" />
    </attr>

    <attr name="guideShowMode">
        <enum name="show_always" value="1" />
        <enum name="show_on_touch" value="2" />
        <enum name="not_show" value="3" />
    </attr>

    <attr name="handleShowMode">
        <enum name="show_always" value="1" />
        <enum name="show_on_touch" value="2" />
        <enum name="not_show" value="3" />
    </attr>

    <attr name="overlayColor" format="color" />
    <attr name="frameColor" format="color" />
    <attr name="handleColor" format="color" />
    <attr name="guideColor" format="color" />

    <attr name="handleSize" format="dimension" />
    <attr name="touchPadding" format="dimension" />
    <attr name="minFrameSize" format="dimension" />
    <attr name="frameStrokeWeight" format="dimension" />
    <attr name="guideStrokeWeight" format="dimension" />

    <attr name="cropEnabled" format="boolean" />
    <attr name="initialFrameScale" format="float" />

    <attr name="scale_x" format="integer" />
    <attr name="scale_y" format="integer" />

    <declare-styleable name="ImageTextView">
        <attr name="android:minHeight" />
        <attr name="text" />
        <attr name="textSize" />
        <attr name="textColor" />

        <attr name="tint" />
        <attr name="tintAlpha" />

        <attr name="image" />
        <attr name="positon" />
        <attr name="padding" />
    </declare-styleable>


    <declare-styleable name="TopBar">
        <attr name="android:actionBarSize" />
        <attr name="android:background" />
        <attr name="android:divider" />
        <attr name="android:selectableItemBackground" />

        <attr name="actionMinWidth" />

        <attr name="clickable" />
        <attr name="secretable" />

        <attr name="text" />
        <attr name="textColor" />
        <attr name="textSize" />

        <attr name="subText" />
        <attr name="subTextSize" />
        <attr name="subTextColor" />

        <attr name="leftText" />
        <attr name="leftTextSize" />
        <attr name="leftTextColor" />
        <attr name="leftImage" />
        <attr name="leftBackground" />
        <attr name="leftVisibility" />

        <attr name="rightText" />
        <attr name="rightTextSize" />
        <attr name="rightTextColor" />
        <attr name="rightImage" />
        <attr name="rightBackground" />
        <attr name="rightVisibility" />
    </declare-styleable>

    <declare-styleable name="BottomBar">
        <attr name="android:orientation" />
        <attr name="selectedChild" />
    </declare-styleable>

    <declare-styleable name="DialogLayouts">
        <attr name="dialogMainLayout" />
        <attr name="dialogListLayout" />
        <attr name="dialogMultiChoiceItem" />
        <attr name="dialogSingleChoiceItem" />
        <attr name="dialogListItem" />
    </declare-styleable>

    <declare-styleable name="DialogButtonBackground">
        <attr name="leftBackground" />
        <attr name="rightBackground" />
        <attr name="middleBackground" />
        <attr name="wholeBackground" />
    </declare-styleable>

    <!--状态的View转换-->
    <declare-styleable name="StatusView">
        <attr name="loadingText" />
        <attr name="errorText" />
        <attr name="errorImage" />
        <attr name="textColor" />
        <attr name="textSize" />
    </declare-styleable>

    <declare-styleable name="TabStrip">
        <attr name="shape" />

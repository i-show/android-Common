<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentPanel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_10">

    <LinearLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gap_grade_2"
        android:layout_marginRight="@dimen/gap_grade_2"
        android:background="@drawable/white_alpha_0_8_5_corner_top_16dp_normal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/alertTitle"
            style="?attr/dialogTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- If the client uses a customTitle, it will be added here. -->
    </LinearLayout>

    <View
        style="@style/line_h"
        android:layout_marginLeft="@dimen/gap_grade_2"
        android:layout_marginRight="@dimen/gap_grade_2" />

    <LinearLayout
        android:id="@+id/contentPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gap_grade_2"
        android:layout_marginRight="@dimen/gap_grade_2"
        android:background="@drawable/white_alpha_0_8_5_corner_bottom_16dp_normal"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false">

            <TextView
                android:id="@+id/message"
                style="?attr/dialogMessageStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ScrollView>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/customPanel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/gap_grade_2"
        android:layout_weight="1"
        android:background="@drawable/white_alpha_0_8_5_corner_bottom_16dp_bg">

        <FrameLayout
            android:id="@+id/custom"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/buttonPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/gap_grade_2"
            android:divider="?android:attr/listDivider"
            android:orientation="horizontal"
            android:showDividers="middle">

            <Button
                android:id="@+id/button2"
                style="?attr/dialogButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button3"
                style="?attr/dialogButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button1"
                style="?attr/dialogButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

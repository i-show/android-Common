<resources>

    <style name="AppEditText" parent="CommonEditText" />

    <style name="AppEditText.Login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/girdle_min_h</item>
        <item name="android:textColor">@color/text_grey_normal</item>
        <item name="android:textSize">@dimen/H_title</item>
        <item name="android:textColorHint">@color/text_grey_hint</item>
        <item name="android:maxLines">1</item>
        <item name="android:drawablePadding">@dimen/gap_grade_3</item>
        <item name="android:layout_marginStart">@dimen/dp_30</item>
        <item name="android:layout_marginEnd">@dimen/dp_30</item>
        <item name="android:background">@drawable/bottom_line_normal_bg</item>
    </style>


    <style name="AppButton" parent="CommonButton" />

    <style name="AppButton.Login">
        <item name="android:textColor">@color/text_white_normal</item>
        <item name="android:textSize">@dimen/H_title</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/dp_30</item>
        <item name="android:layout_marginEnd">@dimen/dp_30</item>
        <item name="android:background">@drawable/corner_5dp_accent_color_bg</item>
    </style>


    <style name="AppButton.Submit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">@dimen/dp_30</item>
        <item name="android:background">@drawable/round_accent_color_button_bg</item>
        <item name="android:textColor">@color/text_white_normal</item>
        <item name="android:textSize">@dimen/H_title</item>
        <item name="android:minHeight">@dimen/dp_45</item>
    </style>

    <style name="AppTextView" parent="CommonTextView" />

    <style name="AppTextView.Login">
        <item name="android:textSize">@dimen/I_title</item>
        <item name="android:textColor">@color/text_grey_light_normal</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/gap_grade_0</item>
        <item name="android:minHeight">@dimen/dp_40</item>
    </style>

    <style name="TextViewPro" />

    <style name="TextViewPro.Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/gap_grade_2</item>
        <item name="android:paddingEnd">@dimen/gap_grade_2</item>
        <item name="leftImageVisibility">gone</item>
        <item name="rightImageVisibility">gone</item>
        <item name="textGravity">right|center_vertical</item>
    </style>


    <style name="EditTextPro" />

    <style name="EditTextPro.Login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_grey_normal</item>
        <item name="android:textSize">@dimen/H_title</item>
        <item name="android:textColorHint">@color/text_grey_hint</item>
        <item name="android:layout_marginStart">@dimen/dp_30</item>
        <item name="android:layout_marginEnd">@dimen/dp_30</item>
        <item name="leftTextVisibility">gone</item>
        <item name="rightImageVisibility">gone</item>
        <item name="tintColor">@color/color_primary</item>
        <item name="inputLines">1</item>
    </style>

    <style name="EditTextPro.Register">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="leftImageVisibility">gone</item>
        <item name="rightImageVisibility">gone</item>
        <item name="android:paddingStart">@dimen/gap_grade_2</item>
        <item name="android:paddingEnd">@dimen/gap_grade_2</item>
    </style>

    <style name="EditTextPro.ForgotPassword">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingStart">@dimen/gap_grade_2</item>
        <item name="android:paddingEnd">@dimen/gap_grade_2</item>
        <item name="leftImageVisibility">gone</item>
        <item name="rightImageVisibility">gone</item>
    </style>

    <style name="EditTextPro.Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/default_item_height</item>
        <item name="android:background">@drawable/bottom_line_bg</item>
        <item name="android:paddingStart">@dimen/gap_grade_2</item>
        <item name="android:paddingEnd">@dimen/gap_grade_2</item>
        <item name="android:gravity">center</item>
        <item name="leftImageVisibility">gone</item>
        <item name="rightImageVisibility">gone</item>
        <item name="inputGravity">right|center_vertical</item>
    </style>


    <style name="ImageTextView" />

    <style name="ImageTextView.BottomBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="textSize">@dimen/I_title</item>
        <item name="textColor">@color/normal_grey_selected_coloraccent</item>
    </style>


    <style name="TextViewPro.LoanStatus">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="leftTextSize">16sp</item>
        <item name="leftTextColor">#383838</item>
        <item name="textSize">14sp</item>
        <item name="textColor">#9092A5</item>
        <item name="bottomLineColor">#C2CADC</item>
        <item name="leftImageRightMargin">@dimen/dp_8</item>
        <item name="android:layout_height">@dimen/dp_35</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:layout_marginStart">@dimen/dp_20</item>
        <item name="android:layout_marginEnd">@dimen/dp_20</item>
        <item name="textGravity">end|center_vertical</item>
        <item name="leftImageVisibility">gone</item>
        <item name="rightImageVisibility">gone</item>
        <item name="rightTextGravity">end|center_vertical</item>
        <item name="rightTextSize">14sp</item>
        <item name="rightTextColor">#9092A5</item>
        <item name="rightTextVisibility">visible</item>
        <item name="bottomLineVisibility">gone</item>
    </style>
</resources>

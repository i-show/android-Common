<resources>

    <style name="AppStatusView" parent="StatusView" />

    <style name="AppEditText" parent="CommonEditText" />

    <style name="AppEditText.Login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">@dimen/H_title</item>
        <item name="android:textColorHint">@color/text_grey_hint</item>
        <item name="android:maxLines">1</item>
        <item name="android:drawablePadding">@dimen/gap_grade_3</item>
        <item name="android:layout_marginStart">@dimen/dp_30</item>
        <item name="android:layout_marginEnd">@dimen/dp_30</item>
        <item name="android:background">@drawable/bottom_line_normal_bg</item>
    </style>


    <style name="AppButton" parent="CommonButton" />

    <style name="AppButton.Login">
        <item name="android:textColor">@color/text_white_normal</item>
        <item name="android:textSize">@dimen/H_title</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/dp_30</item>
        <item name="android:layout_marginEnd">@dimen/dp_30</item>
        <item name="android:background">@drawable/submit_full_bg</item>
    </style>


    <style name="AppButton.Submit">
        <item name="android:layout_width">@dimen/dp_300</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/dp_40</item>
        <item name="android:background">@drawable/submit_full_bg</item>
        <item name="android:textColor">@color/text_white_normal</item>
        <item name="android:textSize">@dimen/H_title</item>
        <item name="android:minHeight">@dimen/dp_45</item>
    </style>

    <style name="AppTextView" parent="CommonTextView" />

    <style name="AppTextView.Agreement" />

    <style name="AppTextView.Agreement.Header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">-6dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/text_grey_light</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="AppTextView.Agreement.Content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#7091D3</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="AppTextView.Login">
        <item name="android:textSize">@dimen/J_title</item>
        <item name="android:textColor">@color/text_grey_light</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/gap_grade_0</item>
        <item name="android:minHeight">@dimen/dp_40</item>
    </style>

    <style name="AppTextViewPro" />

    <style name="AppTextViewPro.Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/default_xxpro_padding</item>
        <item name="android:paddingEnd">@dimen/default_xxpro_padding</item>
        <item name="android:background">@color/white</item>
        <item name="leftTextColor">@color/text_grey</item>
        <item name="leftTextSize">@dimen/J_title</item>
        <item name="bottomLineNormalColor">@color/line</item>
        <item name="leftImageVisibility">gone</item>
        <item name="rightImageVisibility">gone</item>
        <item name="textGravity">right|center_vertical</item>
    </style>

    <style name="AppTextViewPro.Mine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/dp_10</item>
        <item name="android:paddingEnd">@dimen/dp_10</item>
        <item name="leftTextColor">@color/text_grey</item>
        <item name="leftTextSize">@dimen/I_title</item>
        <item name="leftImageVisibility">visible</item>
        <item name="rightImageVisibility">visible</item>
        <item name="textGravity">right|center_vertical</item>
    </style>

    <style name="AppEditTextPro">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/default_xxpro_padding</item>
        <item name="android:paddingEnd">@dimen/default_xxpro_padding</item>
        <item name="android:background">@color/white</item>
        <item name="leftTextColor">@color/text_grey</item>
        <item name="leftTextSize">@dimen/J_title</item>
        <item name="bottomLineNormalColor">@color/line</item>
        <item name="inputTextSize">14sp</item>
        <item name="inputTextColor">@color/text_grey_light</item>
        <item name="inputHintTextColor">@color/text_grey_hint</item>
    </style>

    <style name="AppEditTextPro.Account">
        <item name="leftImageVisibility">gone</item>
        <item name="rightImageVisibility">gone</item>
        <item name="bottomLinePaddingStart">@dimen/default_xxpro_padding</item>
        <item name="bottomLinePaddingEnd">@dimen/default_xxpro_padding</item>
        <item name="inputLines">1</item>
    </style>

    <style name="AppEditTextPro.Account.Login" />

    <style name="AppEditTextPro.Account.Register" />

    <style name="AppEditTextPro.Account.ForgotPassword" />


    <style name="AppEditTextPro.Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/default_item_height</item>
        <item name="android:background">@drawable/bottom_line_bg</item>
        <item name="android:paddingStart">@dimen/gap_grade_2</item>
        <item name="android:paddingEnd">@dimen/gap_grade_2</item>
        <item name="android:gravity">center</item>
        <item name="leftImageVisibility">gone</item>
        <item name="rightImageVisibility">gone</item>
        <item name="inputGravity">right|center_vertical</item>
    </style>


    <style name="ImageTextView" />

    <style name="ImageTextView.BottomBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="textSize">@dimen/J_title</item>
        <item name="textColor">@color/normal_grey_selected_coloraccent</item>
    </style>

    <style name="VerifyCodeButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/dp_90</item>
        <item name="textColor">@color/verify_code_color</item>
        <item name="textSize">@dimen/I_title</item>
    </style>

    <style name="AppCheckBox" />

    <style name="AppCheckBox.Agreement">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleX">0.65</item>
        <item name="android:scaleY">0.65</item>
        <item name="android:text">@null</item>
    </style>

</resources>

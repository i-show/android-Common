<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="135%"
            android:pivotY="15%">
            <shape android:shape="rectangle">
                <size
                    android:width="8dp"
                    android:height="8dp"/>
                <solid android:color="#7d72ff"/>
            </shape>
        </rotate>
    </item>
</layer-list>
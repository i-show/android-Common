<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.5" />

    <TextView
        android:id="@+id/come_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/round_normal_stroke_pressed_solid_bg"
        android:gravity="center"
        android:minWidth="150dp"
        android:padding="10dp"
        android:text="@string/guide_coming"
        android:textColor="@color/normal_coloraccent_pressed_white"
        android:textSize="@dimen/H_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />
</LinearLayout>
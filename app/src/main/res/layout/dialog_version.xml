<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/base_dialog_bg"
              android:orientation="vertical"
              android:paddingTop="@dimen/dp_15">

    <TextView
        android:id="@+id/message"
        style="?attr/dialogMessageStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="@dimen/dp_300"
        android:minHeight="@dimen/dp_50"/>

    <CheckBox
        android:id="@+id/ignore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/gap_grade_1"
        android:layout_marginStart="@dimen/gap_grade_2"
        android:text="@string/not_notify"
        android:textColor="@color/text_grey_light"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="?android:attr/listDivider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="?android:attr/listDivider"
        android:orientation="horizontal"
        android:showDividers="middle">

        <Button
            android:id="@+id/cancel"
            style="?attr/dialogButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/base_dialog_button_left"
            android:text="@string/cancel"
            android:textColor="@color/text_grey_light"/>

        <Button
            android:id="@+id/submit"
            style="?attr/dialogButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/base_dialog_button_right"
            android:text="@string/update"
            android:textColor="@color/color_accent"/>

    </LinearLayout>
</LinearLayout>

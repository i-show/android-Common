<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText">

    <data>

        <variable
            name="vm"
            type="com.ishow.noah.modules.sample.detail.utils.json.SampleJsonViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">


        <TextView
            android:id="@+id/toJson"
            style="@style/AppTextView.Sample"
            android:text="TO-JSON" />

        <TextView
            android:id="@+id/fromJson"
            style="@style/AppTextView.Sample"
            android:layout_marginTop="10dp"
            android:text="FROM" />


        <com.ishow.common.widget.PrintView
            android:id="@+id/printView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/base_dialog_bg"
            android:padding="10dp" />

    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/windows_background"
        android:orientation="vertical">

        <com.ishow.common.widget.TopBar
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:leftImage="@drawable/svg_top_back"
            app:rightImage="@drawable/svg_test" />

        <TextView
            android:id="@+id/send"
            style="@style/AppTextView.Sample"
            android:text="Send" />


        <TextView
            android:id="@+id/reset"
            style="@style/AppTextView.Sample"
            android:text="Reset" />

        <TextView
            android:id="@+id/show"
            style="@style/AppTextView.Sample"
            android:text="Show" />

        <com.ishow.common.widget.PrintView
            android:id="@+id/printView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            app:maxHeight="@dimen/dp_300" />


    </LinearLayout>
</layout>
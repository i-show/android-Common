<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/windows_background"
            android:orientation="vertical">


        <LinearLayout
                android:id="@+id/modify_user_info"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_120"
                android:background="@color/color_accent"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="@dimen/large_header"
                    android:layout_height="@dimen/large_header"
                    android:contentDescription="@string/des_image"
                    tools:src="@mipmap/icon_launcher"/>


            <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/H_title"
                    tools:text="鱼大人"/>

        </LinearLayout>

        <com.ishow.common.widget.textview.TextViewPro
                android:id="@+id/settings"
                style="@style/TextViewPro.Mine"
                app:leftText="@string/settings"
                app:leftImage="@drawable/mine_settings_svg"/>
    </LinearLayout>
</layout>
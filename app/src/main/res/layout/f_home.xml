<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.ishow.noah.modules.main.home.HomeViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.ishow.common.widget.TopBar
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:rightImage="@drawable/svg_test" />


        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/qq"
            style="@style/AppTextView.Sample"
            android:text="QQ" />

        <TextView
            android:id="@+id/youku"
            style="@style/AppTextView.Sample"
            android:text="优酷" />

        <TextView
            android:id="@+id/iqiyi"
            style="@style/AppTextView.Sample"
            android:text="爱奇艺" />

        <TextView
            android:id="@+id/mago"
            style="@style/AppTextView.Sample"
            android:text="芒果" />

        <com.ishow.common.widget.PrintView
            android:id="@+id/printView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/base_dialog_bg"
            android:minHeight="200dp"
            app:maxHeight="@dimen/dp_300" />


    </LinearLayout>
</layout>
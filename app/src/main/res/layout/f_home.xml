<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.ishow.noah.modules.main.home.HomeViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.ishow.common.widget.TopBar
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:rightImage="@drawable/svg_test" />

        <TextView
            android:id="@+id/test1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:text="我是内容"
            android:textColor="@color/blue_900"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/loading"
            style="@style/AppButton.Submit"
            android:text="Loading" />

        <TextView
            android:id="@+id/loading2"
            style="@style/AppButton.Submit"
            android:text="Empty"/>

        <TextView
            android:id="@+id/dis"
            style="@style/AppButton.Submit"
            android:text="Dismiss"/>

        <com.ishow.common.widget.PrintView
            android:id="@+id/printView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/base_dialog_bg"
            android:minHeight="200dp"
            app:maxHeight="@dimen/dp_300" />


    </LinearLayout>
</layout>
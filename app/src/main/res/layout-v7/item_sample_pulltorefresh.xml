<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/no_line_bg"
              android:gravity="center_vertical"
              android:orientation="horizontal">


    <com.ishow.common.widget.imageview.ScaleImageView
        android:id="@+id/image"
        android:layout_width="@dimen/dp_120"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/gap_grade_2"
        android:scaleType="center"
        app:heightScale="9"
        app:widthScale="16"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:paddingEnd="@dimen/gap_grade_1"
        android:paddingStart="@dimen/gap_grade_1"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/G_title"
        android:textStyle="bold"/>


</LinearLayout>
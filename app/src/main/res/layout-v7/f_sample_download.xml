<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.ishow.noah.modules.sample.detail.extend.download.SampleDownloadViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        tools:ignore="HardcodedText">

        <TextView
            android:id="@+id/download1"
            style="@style/AppTextView.Sample"
            android:text="下载1个线程" />

        <TextView
            android:id="@+id/status1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/agree"
            android:textColor="@color/blue_500"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/download2"
            style="@style/AppTextView.Sample"
            android:layout_marginTop="20dp"
            android:text="下载2个线程" />

        <TextView
            android:id="@+id/status2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/agree"
            android:textColor="@color/blue_500"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/download3"
            style="@style/AppTextView.Sample"
            android:layout_marginTop="20dp"
            android:text="下载3个线程" />

        <TextView
            android:id="@+id/status3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/agree"
            android:textColor="@color/blue_500"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/download4"
            style="@style/AppTextView.Sample"
            android:layout_marginTop="20dp"
            android:text="下载4个线程" />

        <TextView
            android:id="@+id/status4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/agree"
            android:textColor="@color/blue_500"
            android:textSize="14sp" />
    </LinearLayout>
</layout>
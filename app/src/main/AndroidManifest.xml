<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ishow.noah">

    <!-- 百度统计权限-->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".AppApplication"
        android:allowBackup="true"
        android:icon="${APP_ICON}"
        android:label="${APP_NAME}"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="n">

        <!--引导界面-->
        <activity
            android:name=".modules.init.splash.SplashActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 引导页-->
        <activity
            android:name=".modules.init.guide.GuideActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Guide" />
        <!--主界面-->
        <activity
            android:name=".modules.main.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <!--登录界面-->
        <activity
            android:name=".modules.account.login.LoginActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Login"
            android:windowSoftInputMode="adjustResize" />
        <!--注册界面-->
        <activity
            android:name=".modules.account.register.RegisterActivity"
            android:screenOrientation="portrait" />
        <!--修改密码重置密码-->
        <activity
            android:name=".modules.account.password.forgot.ForgotPasswordActivity"
            android:screenOrientation="portrait" />


        <activity
            android:name=".modules.account.modify.ModifyUserActivity"
            android:screenOrientation="portrait" />

        <!--只有一个测试图片的类-->
        <activity
            android:name=".modules.base.OnlyWebActivity"
            android:screenOrientation="portrait" />
        <!--设置界面-->
        <activity
            android:name=".modules.settings.SettingsActivity"
            android:screenOrientation="portrait" />
        <!--菜单界面-->
        <activity
            android:name=".modules.egg.EggActivity"
            android:screenOrientation="portrait" />
        <!--菜单界面-->
        <activity
            android:name=".modules.egg.detail.EggAppInfoActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".modules.base.ExitAppActivity"
            android:launchMode="singleTask" />
        <!--++++++++++++++++++++控件或者工具的Demo区域（init）++++++++++++++++++++++++++-->
        <!--Demo的主类-->
        <activity
            android:name=".modules.sample.main.SampleMainActivity"
            android:exported="false"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.yuhaiyang.androidcommon.Test" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!--++++++++++++++++++++控件或者工具的测试区域（end）++++++++++++++++++++++++++-->


        <!-- ++++++++++++++++++++配置区域+++++++++++++++++-->
        <!--百度统计的id-->
        <meta-data
            android:name="BaiduMobAd_STAT_ID"
            android:value="${BAIDU_STATISTICS_ID}" />
        <!-- 百度统计的id 渠道商编号 -->
        <meta-data
            android:name="BaiduMobAd_CHANNEL"
            android:value="${BAIDU_STATISTICS_CHANNEL}" />
        <!-- 百度统计 是否开启错误日志统计，默认为false -->
        <meta-data
            android:name="BaiduMobAd_EXCEPTION_LOG"
            android:value="true" />
    </application>

</manifest>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.ishow.common.widget.imageview.CropImageView
        android:id="@+id/cropView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backgroundColor="@android:color/black"
        app:cropMode="ratio_fit_image"
        app:frameColor="?colorPrimary"
        app:frameStrokeWeight="1dp"
        app:guideColor="?colorPrimary"
        app:guideShowMode="show_on_touch"
        app:guideStrokeWeight="0.8dp"
        app:handleColor="?colorPrimary"
        app:handleShowMode="show_always"
        app:handleSize="6dp"
        app:minFrameSize="50dp"
        app:overlayColor="@color/semipermeable_dark"
        app:touchPadding="8dp" />

    <com.ishow.common.widget.TopBar
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:actionMinWidth="@dimen/dp_110"
        app:leftBackground="?android:selectableItemBackground"
        app:leftText="@android:string/cancel"
        app:rightBackground="?android:selectableItemBackground"
        app:rightText="@android:string/yes" />

</FrameLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="?colorPrimary">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?android:selectableItemBackground"
            android:contentDescription="@string/back"
            android:minWidth="?android:attr/actionBarSize"
            android:scaleType="center" />

        <TextView
            android:id="@+id/complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/gap_grade_4"
            android:background="@drawable/corner_5dp_green_bg"
            android:paddingBottom="@dimen/gap_grade_1"
            android:paddingLeft="@dimen/gap_grade_3"
            android:paddingRight="@dimen/gap_grade_3"
            android:paddingTop="@dimen/gap_grade_1"
            android:text="@string/complete"
            android:textColor="@color/text_white_enable_grey_unenable_color"
            android:textSize="@dimen/H_title" />

    </RelativeLayout>


    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_deep_1" />

</LinearLayout>

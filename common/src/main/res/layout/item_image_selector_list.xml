<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="photo"
            type="com.ishow.common.entries.Image" />

        <variable
            name="vm"
            type="com.ishow.common.modules.image.select.ImageSelectorViewModel" />
    </data>

    <com.ishow.common.widget.framelayout.ScaleFrameLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{()->vm.viewPhoto(root, photo)}"
        app:heightScale="1"
        app:widthScale="1">

        <com.facebook.drawee.view.SimpleDraweeView
            imageUrl="@{photo.uri}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:actualImageScaleType="focusCrop"
            app:placeholderImage="@color/grey_alpha_0_5"
            app:viewAspectRatio="1" />

        <View
            android:id="@+id/mask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey_alpha_0_6"
            android:visibility="@{photo.isSelected?View.VISIBLE:View.INVISIBLE}" />

        <FrameLayout
            android:id="@+id/statusContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:minWidth="@dimen/dp_40"
            android:minHeight="@dimen/dp_40"
            android:onClick="@{()->vm.selectImage(photo,status, mask)}">

            <CheckBox
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:checked="@{photo.isSelected}"
                android:clickable="false"
                android:scaleX="0.8"
                android:scaleY="0.8" />
        </FrameLayout>
    </com.ishow.common.widget.framelayout.ScaleFrameLayout>
</layout>
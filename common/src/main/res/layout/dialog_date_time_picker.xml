<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_data_pick_dialog_bg"
    android:orientation="vertical">

    <com.ishow.common.widget.TopBar
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:actionBarSize="45dp"
        android:background="@drawable/shape_data_pick_dialog_top_bg"
        android:fitsSystemWindows="false"
        app:leftImageVisibility="gone"
        app:leftText="@string/cancel"
        app:leftTextMinWidth="80dp"
        app:rightText="@string/yes"
        app:rightTextMinWidth="80dp" />

    <View style="@style/Line.Horizontal" />

    <com.ishow.common.widget.pickview.DateTimePicker
        android:id="@+id/picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />
</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:orientation="vertical">

    <com.ishow.common.widget.TopBar
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:actionBarSize="@dimen/dp_45"
        app:leftText="@string/cancel"
        app:leftTextMinWidth="@dimen/dp_100"
        app:rightText="@string/yes"
        app:rightTextMinWidth="@dimen/dp_100"/>

    <View style="@style/Line.Horizontal"/>

    <com.ishow.common.widget.pickview.DateTimePicker
        android:id="@+id/picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/gap_grade_3"
        android:layout_marginTop="@dimen/gap_grade_3"/>
</LinearLayout>
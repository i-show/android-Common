<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/top_line_white_normal_bg"
              android:gravity="center_horizontal"
              android:orientation="vertical">


    <com.ishow.common.widget.TopBar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:actionBarSize="@dimen/dialog_top_bar_height"
        app:leftText="@string/cancel"
        app:leftTextMinWidth="@dimen/dp_80"
        app:rightText="@string/yes"
        app:rightTextMinWidth="@dimen/dp_80"/>

    <com.ishow.common.widget.pickview.PickerView
        android:id="@+id/picker"
        android:layout_width="@dimen/dp_200"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        app:itemMinHeight="@dimen/dp_50"
        app:textSize="@dimen/D_title"
        app:visibleCount="3"/>
</LinearLayout>


